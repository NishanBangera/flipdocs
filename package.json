{
  "name": "flipdocs",
  "version": "1.0.0",
  "private": true,
  "description": "FlipDocs - A document flipbook platform",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=docs^... && changeset publish",
    "docker:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "deploy:registry": "chmod +x scripts/deploy-from-registry.sh && ./scripts/deploy-from-registry.sh",
    "deploy:local": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "check:deployment": "chmod +x scripts/check-deployment-ready.sh && ./scripts/check-deployment-ready.sh",
    "setup:ec2": "chmod +x scripts/setup-ec2.sh && ./scripts/setup-ec2.sh"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@turbo/gen": "^1.10.12",
    "prettier": "^3.0.3",
    "turbo": "latest",
    "typescript": "^5.2.2"
  },
  "packageManager": "bun@1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  }
}